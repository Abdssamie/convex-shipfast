{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/convex/_generated/api": [
        "./convex/_generated/api.d.ts"
      ],
      "@/convex/_generated/dataModel": [
        "./convex/_generated/dataModel.d.ts"
      ]
    },
    "target": "ES2020"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "convex/_generated/api.d.ts",
    "convex/_generated/dataModel.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
